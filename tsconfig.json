{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "./",
    "outDir": "./dist",
    "module": "ESNext",
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "moduleResolution": "bundler", 
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
